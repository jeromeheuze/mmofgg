Options +SymLinksIfOwnerMatch
RewriteEngine On
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://mmofishing.games/$1 [R,L]
ErrorDocument 404 https://mmofishing.games/404.php
ErrorDocument 500 https://mmofishing.games/500.php

# Force trailing slash
<IfModule mod_rewrite.c>
	RewriteCond %{REQUEST_URI} /+[^\.]+$
	RewriteRule ^(.+[^/])$ %{REQUEST_URI}/ [R=301,L]
</IfModule>

# rewrite - https://mmofishing.games/tags/index.php?slug=albion-online
# https://mmofishing.games/tags/albion-online/
RewriteRule ^tags/([^/]*)/([^/]*)/?$ /tags/?slug=$1 [L,QSA]