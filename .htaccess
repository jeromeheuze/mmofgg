Options +SymLinksIfOwnerMatch
RewriteEngine On
RewriteBase /

# 1) Redirect www + HTTP → HTTPS non-www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\.mmofishing\.games$ [NC]
RewriteRule ^ https://mmofishing.games%{REQUEST_URI} [L,R=301]

# 3) Pretty URL for game pages
#    /game/black-desert-online/ → /game/index.php?slug=black-desert-online
RewriteRule ^game/([A-Za-z0-9-]+)/?$ /game/index.php?slug=$1 [L,QSA]

# Force trailing slash (skip real files & dirs)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^\.]+[^/])$ %{REQUEST_URI}/ [R=301,L]

# 2) Custom error pages
ErrorDocument 404 https://mmofishing.games/404.php
ErrorDocument 500 https://mmofishing.games/500.php